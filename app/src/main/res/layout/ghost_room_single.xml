<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <FrameLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/picture_side_one"
            android:layout_height="@dimen/picture_side_one"
            android:src="@drawable/soul_keep_girl1"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/picture_side_one"
            android:layout_height="@dimen/picture_side_one"
            android:src="@drawable/soul_keep_bar070"/>

    </FrameLayout>
    <ProgressBar
        android:id="@+id/status_health"
        android:progressTint="@android:color/holo_red_dark"
        android:max="10"
        android:progress="10"
        android:padding="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/picture_side_half"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="30dp"
        android:text="처녀귀신"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>
</LinearLayout>
