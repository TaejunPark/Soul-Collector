<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:id="@+id/ggb_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/soul_keep_girl1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/soul_keep_bar070"/>

    </FrameLayout>

    <TextView
        android:id="@+id/ggb_top_text"
        android:textSize="30dp"
         android:text="시작~!" android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ggb_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임시작"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ggb_finish_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/ggb_finish1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료1" />
        <!--
        <Button
            android:id="@+id/ggb_finish2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료2" />
            -->
    </LinearLayout>

    <TextView
        android:id="@+id/ggb_text_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신: 가위"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/ggb_ggb_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ggb_ga"
            android:text="가위"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             />
        <Button
            android:id="@+id/ggb_ba"
            android:text="바위"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/ggb_bo"
            android:text="보"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</RelativeLayout>
